var r: int = 0;

function circleArea(r: int): float {
    val area = 3.14 * r * r;
    return area;
}

function main() {
    r = 4;
    println("r=" + r + ", area=" + circleArea(r));
    r = 5;
    println("r=" + r + ", area=" + circleArea(r));

    if (2 < 1) println("");
    else if (3 < 1) println("");
    else println("huh");

    val negative = -1;

    println("negative: " + negative);

    println("Loading (Count 1 to 10)");
    print("<");
    for (var i = 0; i < 10; i=i+1) {
        for (var j = 0; j < i; j=j+1) {
            print("=");
        }
        for (var j = 0; j < 10-i; j = j + 1) {
            print(" ");
        }
        print(">");
        sleep(1000);
        print("\b\b\b\b\b\b\b\b\b\b\b");
    }
    println("\bCompleted.");
}
